{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <a href="{{ path('app_accueil') }}">acceuil</a>
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle_court</th>
                <th>Libelle</th>
                <th>Image</th>
                <th>Prix_HT</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.libelleCourt }}</td>
                <td>{{ article.libelle }}</td>
                <td>{{ article.image }}</td>
                <td>{{ article.prixHT }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Create new</a>
{% endblock %}
