{% extends 'base.html.twig' %}

{% block title %}Village green{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{%include "partials/_header.html.twig" %}
<div class="container ">
    <div class="d-flex justify-content-center">
        <h1>Liste des rubriques</h1>
    </div>
    <div class="row">
        {% for rubriques in rubrique %}
            <div class="col-sm-4 col-12 mt-2 mb-2">
            <a class="nav-link" href="{{path('app_sous_rubrique', {'id_rubrique': rubriques.id})}}">
                <div class="card mt-4 pt-4">
                    <div class="d-flex justify-content-center">
                        <img src="{{ asset('uploads/images/' ~ rubriques.image) }}" alt="{{ rubriques.libellecourt}}" width="100">
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-center">
                            <h4 class="card-title">{{ rubriques.libellecourt }}</h4>
                        </div>
                    </div>
                    
                </div>
            </a>
            </div>
        {% endfor %}
    </div>
</div>
{%include "partials/_footer.html.twig" %}
{% endblock %}
