{% extends 'base.html.twig' %}

{% block title %}Village green{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{%include "partials/_header.html.twig" %}
<div class="container ">
    <div class="d-flex justify-content-center">
        <h1>Liste des articles</h1>
    </div>
    <div class="row">
        {% for articles in article %}
            <div class="col-sm-4 col-12 mt-2 mb-2">
                    <div class="card mt-4 pt-4 h-100 pe-2 rounded" >
                        <div class="d-flex justify-content-center">
                            <img src="{{ asset('uploads/images/' ~ articles.image) }}" alt="{{ articles.libellecourt}}" width="100">
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-center">
                                <h4 class="card-title">{{ articles.libellecourt }}</h4>

                            </div>
                            
                            <p >● {{ articles.libelle | replace({',': '<br>●'}) | raw }}</p></div>
                            <div class="d-flex justify-content-end">
                                
                                <p><b>{{articles.prixht}} €</b></p>
                            
                            <br>
                        </div>
                            <div class="d-flex justify-content-end pb-2">
                <a class="nav-link" href="{{path('app_detail', {'id_article': articles.id})}}" title="détail">
                            <button class="btn btn-success">Détail</button>
                </a>
                            </div>
                    </div>
            </div>
        {% endfor %}
    </div>
</div>
{%include "partials/_footer.html.twig" %}
{% endblock %}