{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
{%include "partials/_header.html.twig" %}
<div class="container">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >


            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me" title="ne m'oublie pas :(">
                <label for="_remember_me">ce souvenir de moi</label>
            </div>


        <a href="{{path ('app_forgot_password_request') }}">Mot de passe oublié ?</a>
        <br>

        <button class="btn btn-lg btn-primary" type="submit" title="se connecter">
            Connexion
        </button>
    </form>
</div>

{%include "partials/_footer.html.twig" %}
{% endblock %}
