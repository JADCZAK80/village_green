{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
{%include "partials/_header.html.twig" %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">
    <h1>Reinitialiser votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse email , et nous vous enverons
                un lien pour reinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer le mot de passe de reinitialisation</button>
    {{ form_end(requestForm) }}
    </div>
{%include "partials/_footer.html.twig" %}

{% endblock %}
